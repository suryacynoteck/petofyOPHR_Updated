<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:shimmer="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whiteColor">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/back_arrow_CV"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="20dp"
        android:background="@color/whiteColor"
        android:elevation="5dp"
        android:theme="@style/Theme.MaterialComponents.Light.NoActionBar"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/toolbar">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:background="@drawable/background_grey"
            android:scaleType="fitXY"
            android:visibility="visible" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="12dp"
            android:src="@drawable/black_back_arrow"
            android:visibility="visible" />

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/image_edit_CV"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginRight="20dp"
        android:background="@color/whiteColor"
        android:elevation="5dp"
        android:theme="@style/Theme.MaterialComponents.Light.NoActionBar"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/toolbar">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:background="@drawable/background_grey"
            android:scaleType="fitXY"
            android:visibility="visible" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/camera_icon"
            android:visibility="visible" />

    </com.google.android.material.card.MaterialCardView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:elevation="1dp"
        android:theme="@style/Theme.MaterialComponents.Light.NoActionBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">


    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/pet_profile_image_IV"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:scaleType="fitXY"
        android:src="@drawable/empty_pet_image"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/materialCardView2"
        style="@style/CustomCardViewStyle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="250dp"
        android:background="@color/whiteColor"
        android:theme="@style/Theme.MaterialComponents.Light.NoActionBar"
        app:cardElevation="60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible">

            <TextView
                android:id="@+id/pet_name_TV"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="15dp"
                android:fontFamily="@font/nunito_bold"
                android:gravity="center_vertical"
                android:text="Pet Name"
                android:textColor="@color/gray_1"
                android:textSize="24sp"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="@id/edit_profile_RL"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/edit_profile_RL" />

            <RelativeLayout
                android:id="@+id/edit_profile_RL"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="15dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/edit_profile_IV"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/profile_edit_icon"
                    android:visibility="visible" />

            </RelativeLayout>

            <ScrollView
                android:id="@+id/pet_full_details_SV"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintBottom_toTopOf="@id/add_Clinic_BT"
                android:layout_marginTop="15dp"
                android:visibility="visible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/pet_name_TV"
                app:layout_constraintTop_toBottomOf="@id/pet_name_TV">


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/pet_breed_age_LL"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.8">

                            <ImageView
                                android:id="@+id/pet_breed_RL"
                                android:layout_width="42dp"
                                android:layout_height="42dp"
                                android:src="@drawable/pet_breed_icon"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:id="@+id/breed"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="8dp"
                                android:fontFamily="@font/nunito"
                                android:gravity="top"
                                android:text="Breed"
                                android:textColor="@color/gray_3"
                                android:textSize="15sp"
                                app:layout_constraintStart_toEndOf="@id/pet_breed_RL"
                                app:layout_constraintTop_toTopOf="@id/pet_breed_RL" />

                            <TextView
                                android:id="@+id/pet_breed_TV"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="5dp"
                                android:fontFamily="@font/nunito_bold"
                                android:gravity="bottom"
                                android:textColor="@color/gray_1"
                                android:textSize="15sp"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="@id/breed"
                                app:layout_constraintTop_toBottomOf="@id/breed" />


                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.2">

                            <ImageView
                                android:id="@+id/pet_age_RL"
                                android:layout_width="42dp"
                                android:layout_height="42dp"
                                android:src="@drawable/pet_age_icon"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:id="@+id/pet_age"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="8dp"
                                android:fontFamily="@font/nunito"
                                android:gravity="top"
                                android:text="Pet age"
                                android:textColor="@color/gray_3"
                                android:textSize="15sp"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toEndOf="@id/pet_age_RL"
                                app:layout_constraintTop_toTopOf="@id/pet_age_RL" />

                            <TextView
                                android:id="@+id/pet_age_TV"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="5dp"
                                android:fontFamily="@font/nunito_bold"
                                android:gravity="bottom"
                                android:textColor="@color/gray_1"
                                android:textSize="15sp"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="@id/pet_age"
                                app:layout_constraintTop_toBottomOf="@id/pet_age" />


                        </androidx.constraintlayout.widget.ConstraintLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/pet_id_sex_LL"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:orientation="horizontal"
                        android:weightSum="2"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/pet_breed_age_LL">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.8">

                            <ImageView
                                android:id="@+id/pet_id_RL"
                                android:layout_width="42dp"
                                android:layout_height="42dp"
                                android:src="@drawable/pet_id"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:id="@+id/petid"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="8dp"
                                android:fontFamily="@font/nunito"
                                android:gravity="top"
                                android:text="Pet ID"
                                android:textColor="@color/gray_3"
                                android:textSize="15sp"
                                app:layout_constraintStart_toEndOf="@id/pet_id_RL"
                                app:layout_constraintTop_toTopOf="@id/pet_id_RL" />

                            <TextView
                                android:id="@+id/pet_reg__id_TV"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="5dp"
                                android:fontFamily="@font/nunito_bold"
                                android:gravity="bottom"
                                android:textColor="@color/gray_1"
                                android:textSize="15sp"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="@id/petid"
                                app:layout_constraintTop_toBottomOf="@id/petid" />


                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.2">

                            <ImageView
                                android:id="@+id/pet_sex_RL"
                                android:layout_width="42dp"
                                android:layout_height="42dp"
                                android:src="@drawable/pet_gender_icon"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:id="@+id/gender"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="8dp"
                                android:fontFamily="@font/nunito"
                                android:gravity="top"
                                android:text="Gender"
                                android:textColor="@color/gray_3"
                                android:textSize="15sp"
                                app:layout_constraintStart_toEndOf="@id/pet_sex_RL"
                                app:layout_constraintTop_toTopOf="@id/pet_sex_RL" />

                            <TextView
                                android:id="@+id/pet_gender_TV"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="8dp"
                                android:fontFamily="@font/nunito_bold"
                                android:gravity="bottom"
                                android:textColor="@color/gray_1"
                                android:textSize="15sp"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toEndOf="@id/pet_sex_RL"
                                app:layout_constraintTop_toBottomOf="@id/gender" />


                        </androidx.constraintlayout.widget.ConstraintLayout>


                    </LinearLayout>

                    <TextView
                        android:id="@+id/parent_details_TV"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:fontFamily="@font/nunito_bold"
                        android:text="Parent Details"
                        android:textColor="@color/gray_2"
                        android:textSize="24sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/pet_id_sex_LL" />


                    <androidx.cardview.widget.CardView
                        android:id="@+id/parent_name_RL"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_marginTop="15dp"
                        android:elevation="16dp"
                        app:cardCornerRadius="6dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/parent_details_TV">


                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/user_name_icon"
                            android:visibility="visible" />

                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/pet_parent_name_TV"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:fontFamily="@font/nunito"
                        android:gravity="center_vertical"
                        android:paddingLeft="15dp"
                        android:textColor="@color/gray_1"
                        android:textSize="15sp"
                        app:layout_constraintBottom_toBottomOf="@id/parent_name_RL"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/parent_name_RL"
                        app:layout_constraintTop_toTopOf="@id/parent_name_RL" />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/parent_phone_RL"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_marginTop="8dp"
                        android:elevation="16dp"
                        app:cardCornerRadius="6dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/parent_name_RL">


                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/phone_no_icon"
                            android:visibility="visible" />

                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/parent_phone_TV"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:fontFamily="@font/nunito"
                        android:gravity="center_vertical"
                        android:paddingLeft="15dp"
                        android:textColor="@color/gray_1"
                        android:textSize="15sp"
                        app:layout_constraintBottom_toBottomOf="@id/parent_phone_RL"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toEndOf="@id/parent_phone_RL"
                        app:layout_constraintTop_toTopOf="@id/parent_phone_RL"
                        app:layout_constraintVertical_bias="0.0" />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/parent_location_RL"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_marginTop="8dp"
                        android:elevation="16dp"
                        app:cardCornerRadius="6dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginBottom="15dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/parent_phone_RL">


                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="fitCenter"
                            android:src="@drawable/location_icon"
                            android:visibility="visible" />

                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/parent_address_TV"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nunito"
                        android:gravity="center_vertical"
                        android:paddingLeft="15dp"
                        android:textColor="@color/gray_1"
                        android:textSize="15sp"
                        android:layout_marginBottom="20dp"
                        app:layout_constraintBottom_toBottomOf="@id/parent_location_RL"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toEndOf="@id/parent_location_RL"
                        app:layout_constraintTop_toTopOf="@id/parent_location_RL"
                        app:layout_constraintVertical_bias="0.0" />


                </androidx.constraintlayout.widget.ConstraintLayout>


            </ScrollView>

            <com.facebook.shimmer.ShimmerFrameLayout
                android:id="@+id/pet_profile_shimmer"
                android:visibility="gone"
                android:layout_marginTop="15dp"
                android:layout_width="0dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/pet_name_TV"
                app:layout_constraintStart_toStartOf="@id/pet_name_TV"
                app:layout_constraintBottom_toTopOf="@id/add_Clinic_BT"
                android:layout_height="0dp">



                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/shimmer_pet_breed_age_LL"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.8">

                            <ImageView
                                android:id="@+id/shimmer_pet_breed_RL"
                                android:layout_width="42dp"
                                android:layout_height="42dp"
                                android:src="@drawable/pet_breed_icon"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:id="@+id/shimmer_breed"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="8dp"
                                android:fontFamily="@font/nunito"
                                android:gravity="top"
                                android:text="Breed"
                                android:textColor="@color/gray_3"
                                android:textSize="15sp"
                                app:layout_constraintStart_toEndOf="@id/shimmer_pet_breed_RL"
                                app:layout_constraintTop_toTopOf="@id/shimmer_pet_breed_RL" />

                            <TextView
                                android:id="@+id/shimmer_pet_breed_TV"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="5dp"
                                android:fontFamily="@font/nunito_bold"
                                android:gravity="bottom"
                                android:textColor="@color/gray_1"
                                android:textSize="15sp"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="@id/shimmer_breed"
                                app:layout_constraintTop_toBottomOf="@id/shimmer_breed" />


                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.2">

                            <ImageView
                                android:id="@+id/shimmer_pet_age_RL"
                                android:layout_width="42dp"
                                android:layout_height="42dp"
                                android:src="@drawable/pet_age_icon"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:id="@+id/shimmer_pet_age"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="8dp"
                                android:fontFamily="@font/nunito"
                                android:gravity="top"
                                android:text="Pet age"
                                android:textColor="@color/gray_3"
                                android:textSize="15sp"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toEndOf="@id/shimmer_pet_age_RL"
                                app:layout_constraintTop_toTopOf="@id/shimmer_pet_age_RL" />

                            <TextView
                                android:id="@+id/shimmer_pet_age_TV"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="5dp"
                                android:fontFamily="@font/nunito_bold"
                                android:gravity="bottom"
                                android:textColor="@color/gray_1"
                                android:textSize="15sp"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="@id/shimmer_pet_age"
                                app:layout_constraintTop_toBottomOf="@id/shimmer_pet_age" />


                        </androidx.constraintlayout.widget.ConstraintLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/shimmer_pet_id_sex_LL"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:orientation="horizontal"
                        android:weightSum="2"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/shimmer_pet_breed_age_LL">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.8">

                            <ImageView
                                android:id="@+id/shimmer_pet_id_RL"
                                android:layout_width="42dp"
                                android:layout_height="42dp"
                                android:src="@drawable/pet_id"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:id="@+id/shimmer_petid"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="8dp"
                                android:fontFamily="@font/nunito"
                                android:gravity="top"
                                android:text="Pet ID"
                                android:textColor="@color/gray_3"
                                android:textSize="15sp"
                                app:layout_constraintStart_toEndOf="@id/shimmer_pet_id_RL"
                                app:layout_constraintTop_toTopOf="@id/shimmer_pet_id_RL" />

                            <TextView
                                android:id="@+id/shimmer_pet_reg__id_TV"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="5dp"
                                android:fontFamily="@font/nunito_bold"
                                android:gravity="bottom"
                                android:textColor="@color/gray_1"
                                android:textSize="15sp"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="@id/shimmer_petid"
                                app:layout_constraintTop_toBottomOf="@id/shimmer_petid" />


                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.2">

                            <ImageView
                                android:id="@+id/shimmer_pet_sex_RL"
                                android:layout_width="42dp"
                                android:layout_height="42dp"
                                android:src="@drawable/pet_gender_icon"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:id="@+id/shimmer_gender"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="8dp"
                                android:fontFamily="@font/nunito"
                                android:gravity="top"
                                android:text="Gender"
                                android:textColor="@color/gray_3"
                                android:textSize="15sp"
                                app:layout_constraintStart_toEndOf="@id/shimmer_pet_sex_RL"
                                app:layout_constraintTop_toTopOf="@id/shimmer_pet_sex_RL" />

                            <TextView
                                android:id="@+id/shimmer_pet_gender_TV"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="8dp"
                                android:fontFamily="@font/nunito_bold"
                                android:gravity="bottom"

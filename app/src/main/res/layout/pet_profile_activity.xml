<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/whiteColor"
    tools:context="com.cynoteck.petofyOPHR.activities.PetProfileActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:theme="@style/Theme.MaterialComponents.Light.NoActionBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:fontFamily="@font/nunito"
            android:gravity="center"
            android:text="PET PROFILE"
            android:textColor="@color/gray_2"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/back_arrow_RL"
            app:layout_constraintEnd_toStartOf="@id/edit_profile_RL"
            app:layout_constraintStart_toEndOf="@id/back_arrow_RL"
            app:layout_constraintTop_toTopOf="@id/back_arrow_RL" />


        <RelativeLayout
            android:id="@+id/back_arrow_RL"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/light_grey_bg"
                android:visibility="visible" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp"
                android:src="@drawable/back_arrow"
                android:visibility="visible" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/edit_profile_RL"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/blue_background_bg"
                android:visibility="visible" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="8dp"
                android:src="@drawable/edit_profile"
                android:visibility="visible" />

        </RelativeLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.facebook.shimmer.ShimmerFrameLayout
        android:visibility="gone"
        android:id="@+id/pet_profile_shimmer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/toolbar"
        app:layout_constraintStart_toStartOf="@id/toolbar"
        app:layout_constraintTop_toBottomOf="@id/toolbar">



        <include
            layout="@layout/pet_profile_shimmer"/>

    </com.facebook.shimmer.ShimmerFrameLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/pet_profile_details_CL"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/toolbar"
        app:layout_constraintStart_toStartOf="@id/toolbar"
        app:layout_constraintTop_toBottomOf="@id/toolbar">

        <LinearLayout
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/pet_information_LL"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">


            <RelativeLayout
                android:id="@+id/appoint_image_RL"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:background="@drawable/appointment_image_bg"
                app:layout_constraintBottom_toBottomOf="@id/parent_name_TV"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.cardview.widget.CardView
                    android:id="@+id/appointment_iamge_CV"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    app:cardCornerRadius="6dp">

                    <ImageView
                        android:id="@+id/pet_profile_image_IV"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY"
                        android:src="@drawable/dummy_dog_image" />


                </androidx.cardview.widget.CardView>


            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/pet_name_TV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nunito_bold"
                    android:textColor="@color/gray_2"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/pet_dob_TV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/nunito"
                    android:textColor="@color/gray_2"
                    android:textSize="18sp" />

                <RelativeLayout
                    android:id="@+id/pet_id_RL"
                    android:layout_width="130dp"
                    android:layout_height="38dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/pet_id_bg"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/pet_reg_name_TV">

                    <RelativeLayout
                        android:id="@+id/pet_id_inner_RL"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_centerVertical="true"
                        android:layout_margin="6dp"
                        android:background="@drawable/pet_id_organge_bg">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="3dp"
                            android:src="@drawable/pet_id_icon" />

                    </RelativeLayout>


                    <TextView
                        android:id="@+id/pet_reg__id_TV"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginRight="5dp"
                        android:layout_toRightOf="@id/pet_id_inner_RL"
                        android:fontFamily="@font/nunito"
                        android:gravity="center"
                        android:textColor="@color/gray_1"
                        android:textSize="10sp" />


                </RelativeLayout>


            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:id="@+id/pet_breed_sex_LL"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="horizontal"
            android:weightSum="2"
            app:layout_constraintEnd_toEndOf="@id/pet_information_LL"
            app:layout_constraintStart_toStartOf="@id/pet_information_LL"
            app:layout_constraintTop_toBottomOf="@id/pet_information_LL">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1">

                <RelativeLayout
                    android:id="@+id/pet_breed_RL"
                    android:layout_width="42dp"
                    android:layout_height="match_parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/light_yellow_bg"
                        android:visibility="visible" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="8dp"
                        android:src="@drawable/pet_breed"
                        android:visibility="visible" />

                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:fontFamily="@font/nunito"
                    android:gravity="top"
                    android:text="Breed"
                    android:textColor="@color/gray_3"
                    android:textSize="18sp"
                    app:layout_constraintStart_toEndOf="@id/pet_breed_RL"
                    app:layout_constraintTop_toTopOf="@id/pet_breed_RL" />

                <TextView
                    android:id="@+id/pet_breed_TV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:fontFamily="@font/nunito_bold"
                    android:gravity="bottom"
                    android:textColor="@color/gray_1"
                    android:textSize="18sp"
                    app:layout_constraintBottom_toBottomOf="@id/pet_breed_RL"
                    app:layout_constraintStart_toEndOf="@id/pet_breed_RL" />


            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1">

                <RelativeLayout
                    android:id="@+id/pet_sex_RL"
                    android:layout_width="42dp"
                    android:layout_height="match_parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/light_pink_bg"
                        android:visibility="visible" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="8dp"
                        android:src="@drawable/pet_sex_icon"
                        android:visibility="visible" />

                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:fontFamily="@font/nunito"
                    android:gravity="top"
                    android:text="Gender"
                    android:textColor="@color/gray_3"
                    android:textSize="18sp"
                    app:layout_constraintStart_toEndOf="@id/pet_sex_RL"
                    app:layout_constraintTop_toTopOf="@id/pet_sex_RL" />

                <TextView
                    android:id="@+id/pet_gender_TV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:fontFamily="@font/nunito_bold"
                    android:gravity="bottom"
                    android:textColor="@color/gray_1"
                    android:textSize="18sp"
                    app:layout_constraintBottom_toBottomOf="@id/pet_sex_RL"
                    app:layout_constraintStart_toEndOf="@id/pet_sex_RL" />


            </androidx.constraintlayout.widget.ConstraintLayout>


        </LinearLayout>


        <TextView
            android:id="@+id/parent_details_TV"
            android:layout_marginTop="30dp"
            app:layout_constraintStart_toStartOf="@id/pet_information_LL"
            app:layout_constraintEnd_toEndOf="@id/pet_information_LL"
            app:layout_constraintTop_toBottomOf="@id/pet_breed_sex_LL"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunito"
            android:text="Parent Details"
            android:textColor="@color/gray_2"
            android:textSize="24sp" />


        <RelativeLayout
            android:layout_marginTop="20dp"
            android:id="@+id/parent_name_RL"
            android:layout_width="32dp"
            android:layout_height="32dp"
            app:layout_constraintTop_toBottomOf="@id/parent_details_TV"
            app:layout_constraintStart_toStartOf="@id/pet_information_LL">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/light_grey_bg"
                android:visibility="visible" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp"
                android:src="@drawable/parent_profile"
                android:visibility="visible" />

        </RelativeLayout>

        <TextView
            android:paddingLeft="15dp"
            android:gravity="center_vertical"
            android:id="@+id/pet_parent_name_TV"
            app:layout_constraintTop_toTopOf="@id/parent_name_RL"
            app:layout_constraintStart_toEndOf="@id/parent_name_RL"
            app:layout_constraintEnd_toEndOf="@id/pet_information_LL"
            app:layout_constraintBottom_toBottomOf="@id/parent_name_RL"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:fontFamily="@font/nunito"
            android:textColor="@color/gray_1"
            android:textSize="18sp" />

        <RelativeLayout
            android:layout_marginTop="8dp"
            android:id="@+id/parent_phone_RL"
            android:layout_width="32dp"
            android:layout_height="32dp"
            app:layout_constraintTop_toBottomOf="@id/parent_name_RL"
            app:layout_constraintStart_toStartOf="@id/pet_information_LL">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/light_grey_bg"
                android:visibility="visible" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp"
                android:src="@drawable/parent_phone"
                android:visibility="visible" />

        </RelativeLayout>

        <TextView
            android:id="@+id/parent_phone_TV"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:fontFamily="@font/nunito"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:textColor="@color/gray_1"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@id/parent_phone_RL"
            app:layout_constraintEnd_toEndOf="@id/pet_information_LL"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@id/parent_phone_RL"
            app:layout_constraintTop_toTopOf="@id/parent_phone_RL"
            app:layout_constraintVertical_bias="0.0" />

        <RelativeLayout
            android:layout_marginTop="8dp"
            android:id="@+id/parent_location_RL"
            android:layout_width="32dp"
            android:layout_height="32dp"
            app:layout_constraintTop_toBottomOf="@id/parent_phone_RL"
            app:layout_constraintStart_toStartOf="@id/pet_information_LL">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/light_grey_bg"
                android:visibility="visible" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp"
                android:src="@drawable/location"
                android:visibility="visible" />

        </RelativeLayout>

        <TextView
            android:id="@+id/parent_address_TV"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:fontFamily="@font/nunito"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:textColor="@color/gray_1"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@id/parent_location_RL"
            app:layout_constraintEnd_toEndOf="@id/pet_information_LL"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@id/parent_location_RL"
            app:layout_constraintTop_toTopOf="@id/parent_location_RL"
            app:layout_constraintVertical_bias="0.0" />

        <Button
            android:id="@+id/Add_Clinic_BT"
            android:text="@string/add_clinic_data"
            android:textAllCaps="false"
            android:textColor="@color/white_1"
            app:layout_constraintStart_toStartOf="@id/pet_information_LL"
            app:layout_constraintEnd_toEndOf="@id/pet_information_LL"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="15dp"
            android:layout_width="0dp"
            android:background="@drawable/blue_background_bg"
            android:layout_height="45dp"/>



    </androidx.constraintlayout.widget.ConstraintLayout>





</androidx.constraintlayout.widget.ConstraintLayout>
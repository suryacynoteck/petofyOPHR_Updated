<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/clinic_parent_layout"
        android:background="@drawable/reports_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:layout_marginLeft="20dp"
            android:layout_alignParentStart="true"
            android:id="@+id/view_reports_IV"
            android:layout_centerInParent="true"
            android:src="@drawable/viewreports_icon"
            android:layout_width="50dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:gravity="start"
            android:paddingLeft="20dp"
            android:textSize="18dp"
            android:textColor="@color/black_color"
            android:layout_centerInParent="true"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:id="@+id/report_type_TV"
            android:text="Health problem"
            android:layout_toRightOf="@id/view_reports_IV"/>


        <ImageView
            android:layout_alignParentEnd="true"
            android:layout_toRightOf="@+id/report_type_TV"
            android:layout_marginLeft="20dp"
            android:id="@+id/view_reports_arrow"
            android:layout_centerInParent="true"
            android:src="@drawable/forward_arrow"
            android:layout_width="50dp"
            android:layout_height="wrap_content"/>


    </RelativeLayout>



</LinearLayout>
